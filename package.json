{
    "name": "one-trick-electron",
    "version": "1.0.0",
    "description": "",
    "main": "dist/main.js",
    "targets": {
        "main": {
            "source": "src/main/main.ts"
        },
        "preload": {
            "source": "src/main/preload.ts",
            "context": "electron-renderer",
            "isLibrary": true
        },
        "renderer": {
            "source": "src/renderer/index.html",
            "distDir": "dist/renderer/",
            "publicUrl": "./"
        }
    },
    "staticFiles": {
        "staticPath": "public",
        "watcherGlob": "**"
    },
    "scripts": {
        "start": "electron .",
        "dev": "parcel watch --no-cache",
        "build": "parcel build",
        "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
        "cypress": "cypress open"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "cypress": "^12.7.0",
        "eslint": "^8.36.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "parcel": "^2.8.3",
        "parcel-reporter-static-files-copy": "^1.5.0",
        "process": "^0.11.10"
    },
    "dependencies": {
        "electron": "^23.1.3",
        "node-fetch-commonjs": "^3.2.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ws": "^8.13.0"
    }
}
